@model List<FastBookCreator.Models.Pack>
@using GridMvc.Html

<div>
    <div class="row">
        <div class="col-md-6 group"  >
            <div >
                <input id="packName" type="text" class="form-control" placeholder=@Resources.Resource.PackName>
            </div>
            <div   >
                @Html.DropDownList("methodId", Model.Select(item => new SelectListItem
               {
                   Value = item.PackName,
                   Text = item.Description.ToString(),
                   Selected = false
               }), @Resources.Resource.MethodSelect, new { @class = "form-control btn btn-default dropdown-toggle" })
            </div>
        </div>

        <div class="col-md-6 group"  >
            <div  >
                <input id="description" type="text" class="form-control" placeholder=@Resources.Resource.Description>
            </div>
            <div >
                @Html.DropDownList("subjectId", Model.Select(item => new SelectListItem
               {
                   Value = item.PackName,
                   Text = item.Description.ToString(),
                   Selected = false
               }), @Resources.Resource.SubjectSelect, new { @class = "form-control btn btn-default dropdown-toggle" })
            </div>
        </div>


    </div>

    <div class="row   center-block">
        <button type="button" class="btn btn-default" onclick="Save();">
            <span class="glyphicon glyphicon-floppy-save" aria-hidden="true"></span>&nbsp;&nbsp; @Resources.Resource.Save
        </button>
    </div>
</div>


